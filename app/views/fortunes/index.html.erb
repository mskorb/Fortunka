  <script type="text/javascript">
$(document).ready(function(){
	
	//toggle comment
	$(".note").click(function(){
		$(this).next(".comment").toggle("bounce",{},500);
		return false;
	});

	//collapse all messages
		$(".show_all_message").click(function(){
		$(this).hide()
		$("div.comment").hide("bounce",{},500);
		return false;
	});

	//show all messages
	$(".show_all_message").click(function(){
		$(this).hide()
		$("div.comment").show("bounce",{},500);
		return false;
	});


});	
</script>
     
